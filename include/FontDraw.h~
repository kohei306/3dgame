#ifndef FONT_DRAW_H_
#define FONT_DRAW_H_

class FontDraw

{
 public:
  enum ImageID{ PLAYER1= 0, 
	 PLAYER2,
	 BOMB_UP,
	 FIRE_UP,
	 HORI_FIRE,
	 VER_FIRE,
	 ENEMY,
	 WALL,
	 BRICK,
	 FLOOR,
	 BOMB,
	 CROSS_FIRE};

  FontDraw(){};
  ~FontDraw(){};
  
  void set_texture_id(GLuint t_id);
  GLuint get_texture_id();
  void draw_font();
  void set_image_id(ImageID img_id);
  ImageID get_image_id();
  void set_vertex_x(int x);
  void set_vertex_y(int y);
  int get_vertex_x();
  int get_vertex_y();
  void set_size(int size);
  int get_size();
  void init_font(GLuint t_id, ImageID img_id, int x, int y, int size);
  void set_font(ImageID img_id, int x, int y);

 private:
  GLuint texture_id_;
  ImageID image_id_;
  int vertex_x_;
  int vertex_y_;
  int size_;

};

#endif
